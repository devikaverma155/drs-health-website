{% comment %}
  Featured Products Section
  Shopify native product grid with ratings, add-to-cart, and benefit highlights
{% endcomment %}

<section class="featured-products">
  <div class="featured-products__container">
    {% if section.settings.heading != blank %}
      <div class="featured-products__header">
        <h2 class="featured-products__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="featured-products__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="featured-products__grid" data-grid-columns="{{ section.settings.columns }}">
        {% for product in section.settings.collection.products limit: section.settings.products_count %}
          <div class="product-card featured-products__card">
            {% if product.featured_image %}
              <div class="product-card__image">
                <img 
                  src="{{ product.featured_image | image_url: width: 500 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="500"
                  height="500"
                  class="product-card__img"
                >
                
                {% if product.compare_at_price > product.price %}
                  <div class="product-card__badge product-card__badge--sale">
                    {% assign discount = product.compare_at_price | minus: product.price | divided_by: product.compare_at_price | times: 100 | ceil %}
                    Save {{ discount }}%
                  </div>
                {% endif %}
              </div>
            {% endif %}

            <div class="product-card__content">
              <div class="product-card__info">
                <h3 class="product-card__title">
                  <a href="{{ product.url }}" class="product-card__link">
                    {{ product.title }}
                  </a>
                </h3>

                {% if section.settings.show_rating %}
                  <div class="product-card__rating">
                    <div class="rating" data-rating="4.5">
                      <div class="rating__stars">
                        {% for i in (1..5) %}
                          <svg 
                            class="rating__star {% if i <= 4 %}rating__star--filled{% elsif i == 5 %}rating__star--half{% endif %}" 
                            viewBox="0 0 24 24" 
                            fill="currentColor"
                          >
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                          </svg>
                        {% endfor %}
                      </div>
                      <span class="rating__text">({{ section.settings.review_count }})</span>
                    </div>
                  </div>
                {% endif %}

                {% if section.settings.show_benefits and product.metafields.custom.health_benefits %}
                  <div class="product-card__benefits">
                    <ul class="benefits-list">
                      {% assign benefits_array = product.metafields.custom.health_benefits.value | split: ',' | slice: 0, 2 %}
                      {% for benefit in benefits_array %}
                        <li class="benefits-list__item">{{ benefit | strip }}</li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              </div>

              <div class="product-card__footer">
                <div class="product-card__price">
                  {% if product.compare_at_price > product.price %}
                    <span class="price-item price-item--sale">
                      {{ product.price | money }}
                    </span>
                    <span class="price-item price-item--regular">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% else %}
                    <span class="price-item">
                      {{ product.price | money }}
                    </span>
                  {% endif %}
                </div>

                <form method="post" action="/cart/add" class="product-card__form">
                  <input type="hidden" name="id" value="{{ product.variants[0].id }}">
                  <button 
                    type="submit" 
                    class="button product-card__add-to-cart"
                    {% if product.available == false %}disabled{% endif %}
                  >
                    {% if product.available %}
                      Add to Cart
                    {% else %}
                      Out of Stock
                    {% endif %}
                  </button>
                </form>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all %}
        <div class="featured-products__cta">
          <a href="{{ section.settings.collection.url }}" class="button button--secondary">
            View All Products
            <span class="button__icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </span>
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="placeholder">
        <p>Please select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .featured-products {
    padding: var(--spacing-8) var(--spacing-4);
    background-color: var(--color-background);
  }

  .featured-products__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-products__header {
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .featured-products__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-foreground-heading);
    margin: 0 0 var(--spacing-3) 0;
    letter-spacing: -0.02em;
  }

  .featured-products__subtitle {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.85;
  }

  .featured-products__grid {
    display: grid;
    gap: var(--spacing-5);
    margin-bottom: var(--spacing-8);
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }

  /* Product Card */
  .product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #FFFFFF;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .product-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
    transform: translateY(-4px);
  }

  .product-card__image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    background-color: #F5F5F5;
  }

  .product-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-card__img {
    transform: scale(1.05);
  }

  .product-card__badge {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: var(--spacing-2) var(--spacing-3);
    background-color: #FF5252;
    color: #FFFFFF;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .product-card__badge--sale {
    background-color: #FF6B35;
  }

  .product-card__content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--spacing-4);
  }

  .product-card__info {
    flex: 1;
    margin-bottom: var(--spacing-3);
  }

  .product-card__title {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 var(--spacing-2) 0;
  }

  .product-card__link {
    color: var(--color-foreground-heading);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .product-card__link:hover {
    color: var(--color-primary);
  }

  .product-card__rating {
    margin-bottom: var(--spacing-2);
  }

  .rating {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
  }

  .rating__stars {
    display: flex;
    gap: 2px;
  }

  .rating__star {
    width: 16px;
    height: 16px;
    color: #FFD700;
  }

  .rating__star--filled {
    fill: currentColor;
  }

  .rating__star--half {
    fill: url(#gradient);
  }

  .rating__text {
    font-size: 0.875rem;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .product-card__benefits {
    margin-bottom: var(--spacing-2);
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .benefits-list__item {
    font-size: 0.875rem;
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
  }

  .benefits-list__item::before {
    content: 'âœ“';
    color: #4CAF50;
    font-weight: 700;
    flex-shrink: 0;
  }

  .product-card__footer {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    padding-top: var(--spacing-3);
    border-top: 1px solid var(--color-border);
  }

  .product-card__price {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-2);
  }

  .price-item {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-foreground-heading);
  }

  .price-item--sale {
    color: #FF6B35;
  }

  .price-item--regular {
    font-size: 0.875rem;
    color: var(--color-foreground);
    opacity: 0.6;
    text-decoration: line-through;
  }

  .product-card__form {
    width: 100%;
  }

  .product-card__add-to-cart {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-4);
    background-color: var(--color-primary, #4CAF50);
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .product-card__add-to-cart:hover:not(:disabled) {
    background-color: var(--color-primary-hover, #45a049);
    transform: translateY(-2px);
  }

  .product-card__add-to-cart:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .featured-products__cta {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-6);
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-6);
    background-color: var(--color-primary-button-background);
    color: var(--color-primary-button-text);
    border: 2px solid var(--color-primary-button-border);
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .button:hover {
    background-color: var(--color-primary-button-hover-background);
    transform: translateY(-2px);
  }

  .button--secondary {
    background-color: transparent;
    color: var(--color-foreground);
    border-color: var(--color-foreground);
  }

  .button--secondary:hover {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  .button__icon {
    display: flex;
    width: 18px;
    height: 18px;
  }

  .button__icon svg {
    width: 100%;
    height: 100%;
  }

  .placeholder {
    padding: var(--spacing-8);
    text-align: center;
    color: var(--color-foreground);
    opacity: 0.6;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .featured-products {
      padding: var(--spacing-6) var(--spacing-3);
    }

    .featured-products__grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: var(--spacing-3);
    }

    .product-card__content {
      padding: var(--spacing-3);
    }

    .product-card__footer {
      gap: var(--spacing-2);
    }
  }

  @media (max-width: 480px) {
    .featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-2);
    }

    .product-card__content {
      padding: var(--spacing-2);
    }

    .product-card__benefits {
      display: none;
    }

    .product-card__rating {
      display: none;
    }

    .product-card__title {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Our Best Sellers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section subheading",
      "default": "Trusted by thousands of customers"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of products",
      "min": 3,
      "max": 12,
      "default": 6,
      "step": 3
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 4,
      "default": 3,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product ratings",
      "default": true
    },
    {
      "type": "range",
      "id": "review_count",
      "label": "Review count (placeholder)",
      "min": 5,
      "max": 500,
      "default": 125,
      "step": 5
    },
    {
      "type": "checkbox",
      "id": "show_benefits",
      "label": "Show health benefits",
      "default": true,
      "info": "Requires custom metafield: custom.health_benefits"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
