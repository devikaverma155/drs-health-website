{% comment %}
  Health Concern Grid Section
  Shows health concerns as clickable navigation cards
  Supports 5-6 concern cards with icons and descriptions
{% endcomment %}

<section class="health-concern-grid">
  <div class="health-concern-grid__container">
    {% if section.settings.heading != blank %}
      <div class="health-concern-grid__header">
        <h2 class="health-concern-grid__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="health-concern-grid__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="health-concern-grid__grid">
        {% for block in section.blocks %}
          <a 
            href="{{ block.settings.link }}" 
            class="health-concern-card health-concern-card--{{ block.settings.color }}"
            data-concern="{{ block.settings.title | handleize }}"
          >
            {% if block.settings.icon != blank %}
              <div class="health-concern-card__icon">
                <img 
                  src="{{ block.settings.icon | image_url: width: 56 }}" 
                  alt="{{ block.settings.title }}"
                  loading="lazy"
                  width="56"
                  height="56"
                >
              </div>
            {% else %}
              <div class="health-concern-card__icon-placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
            {% endif %}
            
            <h3 class="health-concern-card__title">{{ block.settings.title }}</h3>
            
            {% if block.settings.description != blank %}
              <p class="health-concern-card__description">{{ block.settings.description }}</p>
            {% endif %}

            <div class="health-concern-card__arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </div>
          </a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .health-concern-grid {
    padding: var(--spacing-8) var(--spacing-4);
    background-color: #FFFFFF;
  }

  .health-concern-grid__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .health-concern-grid__header {
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .health-concern-grid__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    font-weight: 700;
    color: #000000;
    margin: 0 0 var(--spacing-3) 0;
    letter-spacing: -0.02em;
  }

  .health-concern-grid__subtitle {
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.81);
    max-width: 600px;
    margin: 0 auto;
  }

  .health-concern-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-4);
    grid-auto-rows: 1fr;
  }

  /* Health Concern Card */
  .health-concern-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-5);
    background-color: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    text-align: center;
    text-decoration: none;
    color: rgba(0, 0, 0, 0.81);
    transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .health-concern-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.02), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .health-concern-card:hover {
    border-color: rgba(0, 0, 0, 0.12);
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
  }

  .health-concern-card:hover::before {
    opacity: 1;
  }

  .health-concern-card__icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background-color: #F5F5F5;
    transition: all 0.3s ease;
  }

  .health-concern-card:hover .health-concern-card__icon {
    background-color: rgba(0, 0, 0, 0.06);
    transform: scale(1.1);
  }

  .health-concern-card__icon img {
    width: 56px;
    height: 56px;
    object-fit: contain;
  }

  .health-concern-card__icon-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(0, 0, 0, 0.81);
  }

  .health-concern-card__icon-placeholder svg {
    width: 32px;
    height: 32px;
  }

  .health-concern-card__title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #000000;
    margin: 0;
    line-height: 1.3;
  }

  .health-concern-card__description {
    font-size: 0.875rem;
    line-height: 1.5;
    color: rgba(0, 0, 0, 0.81);
    margin: 0;
    opacity: 0.85;
  }

  .health-concern-card__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: #f5f5f5;
    color: #000000;
    transition: all 0.3s ease;
    margin-top: var(--spacing-1);
  }

  .health-concern-card:hover .health-concern-card__arrow {
    background-color: #000000;
    color: #FFFFFF;
    transform: translateX(4px);
  }

  .health-concern-card__arrow svg {
    width: 18px;
    height: 18px;
  }

  /* Color variants */
  .health-concern-card--green {
    --card-color: #4CAF50;
  }

  .health-concern-card--green:hover {
    border-color: #4CAF50;
  }

  .health-concern-card--blue {
    --card-color: #2196F3;
  }

  .health-concern-card--blue:hover {
    border-color: #2196F3;
  }

  .health-concern-card--orange {
    --card-color: #FF9800;
  }

  .health-concern-card--orange:hover {
    border-color: #FF9800;
  }

  .health-concern-card--purple {
    --card-color: #9C27B0;
  }

  .health-concern-card--purple:hover {
    border-color: #9C27B0;
  }

  .health-concern-card--red {
    --card-color: #F44336;
  }

  .health-concern-card--red:hover {
    border-color: #F44336;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .health-concern-grid {
      padding: var(--spacing-6) var(--spacing-3);
    }

    .health-concern-grid__title {
      font-size: 1.75rem;
    }

    .health-concern-grid__grid {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: var(--spacing-3);
    }

    .health-concern-card {
      padding: var(--spacing-4);
    }

    .health-concern-card:hover {
      transform: translateY(-4px);
    }
  }

  @media (max-width: 480px) {
    .health-concern-grid__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-2);
    }

    .health-concern-card {
      padding: var(--spacing-3);
      gap: var(--spacing-2);
    }

    .health-concern-card__title {
      font-size: 1rem;
    }

    .health-concern-card__description {
      display: none;
    }

    .health-concern-card__icon {
      width: 48px;
      height: 48px;
    }

    .health-concern-card__icon img {
      width: 48px;
      height: 48px;
    }
  }
</style>

