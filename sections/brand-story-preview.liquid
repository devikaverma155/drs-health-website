{% comment %}
  Brand Story Preview Section
  Short about section with CTA to About page
  Supports image, text content, and multiple CTAs
{% endcomment %}

<section class="brand-story-preview">
  <div class="brand-story-preview__container">
    {% if section.settings.image != blank %}
      <div class="brand-story-preview__image">
        <img 
          src="{{ section.settings.image | image_url: width: 600 }}"
          alt="DRS Health Story"
          loading="lazy"
          width="600"
          height="500"
          class="brand-story-preview__img"
        >
      </div>
    {% endif %}

    <div class="brand-story-preview__content">
      {% if section.settings.badge != blank %}
        <div class="brand-story-preview__badge">
          {{ section.settings.badge }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="brand-story-preview__title">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="brand-story-preview__text">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.highlights != blank %}
        <ul class="brand-story-preview__highlights">
          {% assign highlights_array = section.settings.highlights | split: ',' %}
          {% for item in highlights_array %}
            <li class="brand-story-preview__highlight">{{ item | strip }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="brand-story-preview__buttons">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'button' %}
                <a 
                  href="{{ block.settings.button_link }}" 
                  class="button brand-story-preview__button brand-story-preview__button--{{ block.settings.button_style }}"
                >
                  {{ block.settings.button_label }}
                  {% if block.settings.show_arrow %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  {% endif %}
                </a>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .brand-story-preview {
    padding: var(--spacing-8) var(--spacing-4);
    background: #FFFFFF;
  }

  .brand-story-preview__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
    align-items: center;
  }

  .brand-story-preview__image {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    aspect-ratio: 4/3.5;
    background-color: #F5F5F5;
  }

  .brand-story-preview__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .brand-story-preview:hover .brand-story-preview__img {
    transform: scale(1.05);
  }

  .brand-story-preview__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .brand-story-preview__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-3);
    background-color: rgba(76, 175, 80, 0.1);
    border: 1px solid rgba(76, 175, 80, 0.3);
    border-radius: 24px;
    color: #2E7D32;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    width: fit-content;
  }

  .brand-story-preview__badge::before {
    content: '✓';
    font-weight: 700;
    font-size: 1.125rem;
  }

  .brand-story-preview__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-foreground-heading);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .brand-story-preview__text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.9;
  }

  .brand-story-preview__text p {
    margin: 0 0 var(--spacing-3) 0;
  }

  .brand-story-preview__text p:last-child {
    margin-bottom: 0;
  }

  .brand-story-preview__highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .brand-story-preview__highlight {
    font-size: 0.95rem;
    color: var(--color-foreground);
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-2);
    line-height: 1.5;
  }

  .brand-story-preview__highlight::before {
    content: '✓';
    font-weight: 700;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .brand-story-preview__buttons {
    display: flex;
    gap: var(--spacing-3);
    flex-wrap: wrap;
    margin-top: var(--spacing-2);
  }

  .brand-story-preview__button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-6);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .brand-story-preview__button--primary {
    background-color: var(--color-primary-button-background, #4CAF50);
    color: var(--color-primary-button-text, #ffffff);
    border-color: var(--color-primary-button-background, #4CAF50);
  }

  .brand-story-preview__button--primary:hover {
    background-color: var(--color-primary-button-hover-background, #45a049);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(76, 175, 80, 0.2);
  }

  .brand-story-preview__button--secondary {
    background-color: transparent;
    color: var(--color-foreground, #000000);
    border-color: var(--color-foreground, #000000);
  }

  .brand-story-preview__button--secondary:hover {
    background-color: var(--color-foreground, #000000);
    color: var(--color-background, #ffffff);
    transform: translateY(-2px);
  }

  .brand-story-preview__button svg {
    width: 18px;
    height: 18px;
  }

  /* Desktop responsive */
  @media (max-width: 1024px) {
    .brand-story-preview__container {
      grid-template-columns: 1fr;
      gap: var(--spacing-6);
    }

    .brand-story-preview__image {
      aspect-ratio: 16/9;
    }
  }

  @media (max-width: 768px) {
    .brand-story-preview {
      padding: var(--spacing-6) var(--spacing-3);
    }

    .brand-story-preview__container {
      gap: var(--spacing-5);
    }

    .brand-story-preview__title {
      font-size: 1.75rem;
    }

    .brand-story-preview__buttons {
      gap: var(--spacing-2);
    }

    .brand-story-preview__button {
      padding: var(--spacing-2) var(--spacing-4);
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .brand-story-preview__title {
      font-size: 1.5rem;
    }

    .brand-story-preview__button {
      width: 100%;
      justify-content: center;
    }

    .brand-story-preview__buttons {
      flex-direction: column;
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Brand Story Preview",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Brand image",
      "info": "Recommended: 600x500px"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge text (optional)",
      "placeholder": "Our Story"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by Wellness Seekers Across India",
      "info": "Main heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Since inception, DRS Health has been committed to creating science-backed wellness products that truly make a difference. Our manufacturing excellence, combined with traditional knowledge, brings you healthcare solutions you can trust.</p>"
    },
    {
      "type": "text",
      "id": "highlights",
      "label": "Key highlights (comma-separated)",
      "placeholder": "20+ Years of Excellence, WHO-GMP Certified, 500+ Product Formulations",
      "default": "20+ Years of Excellence, WHO-GMP Certified, Science-Backed Formulations"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Read Our Story"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "show_arrow",
          "label": "Show arrow icon",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Story Preview",
      "blocks": [
        {
          "type": "button",
          "settings": {
            "button_label": "Read Our Full Story",
            "button_style": "primary",
            "show_arrow": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
