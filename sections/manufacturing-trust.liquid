{% comment %}
  Manufacturing & Trust Section
  Display certifications, quality standards, and manufacturing credentials
  WHO-GMP, ISO highlights with icons and descriptions
{% endcomment %}

<section class="manufacturing-trust">
  <div class="manufacturing-trust__container">
    <div class="manufacturing-trust__content">
      {% if section.settings.heading != blank %}
        <div class="manufacturing-trust__header">
          <h2 class="manufacturing-trust__title">{{ section.settings.heading }}</h2>
          {% if section.settings.description != blank %}
            <p class="manufacturing-trust__description">{{ section.settings.description }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="manufacturing-trust__grid">
          {% for block in section.blocks %}
            <div class="trust-item">
              {% if block.settings.icon != blank %}
                <div class="trust-item__icon">
                  <img 
                    src="{{ block.settings.icon | image_url: width: 56 }}" 
                    alt="{{ block.settings.title }}"
                    loading="lazy"
                    width="56"
                    height="56"
                  >
                </div>
              {% else %}
                <div class="trust-item__icon-placeholder">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path>
                    <polyline points="10 17 14 21 22 9"></polyline>
                  </svg>
                </div>
              {% endif %}

              <h3 class="trust-item__title">{{ block.settings.title }}</h3>
              <p class="trust-item__description">{{ block.settings.description }}</p>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_image and section.settings.side_image != blank %}
      <div class="manufacturing-trust__image">
        <img 
          src="{{ section.settings.side_image | image_url: width: 500 }}"
          alt="Manufacturing facility"
          loading="lazy"
          width="500"
          height="500"
          class="manufacturing-trust__img"
        >
      </div>
    {% endif %}
  </div>
</section>

<style>
  .manufacturing-trust {
    padding: var(--spacing-8) var(--spacing-4);
    background: #FFFFFF;
  }

  .manufacturing-trust__container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    align-items: center;
  }

  .manufacturing-trust__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .manufacturing-trust__header {
    margin-bottom: var(--spacing-2);
  }

  .manufacturing-trust__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-foreground-heading);
    margin: 0 0 var(--spacing-3) 0;
    letter-spacing: -0.02em;
  }

  .manufacturing-trust__description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.85;
    max-width: 600px;
    margin: 0;
  }

  .manufacturing-trust__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-5);
  }

  /* Trust Item */
  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--spacing-5);
    background: #F8FAFB;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .trust-item:hover {
    border-color: var(--color-primary);
    background-color: #F0F9F6;
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(76, 175, 80, 0.1);
  }

  .trust-item__icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), rgba(76, 175, 80, 0.8));
    border-radius: 10px;
    margin-bottom: var(--spacing-3);
    transition: all 0.3s ease;
  }

  .trust-item:hover .trust-item__icon {
    transform: scale(1.1) rotate(-5deg);
  }

  .trust-item__icon img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  .trust-item__icon-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
  }

  .trust-item__icon-placeholder svg {
    width: 32px;
    height: 32px;
  }

  .trust-item__title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-foreground-heading);
    margin: 0 0 var(--spacing-2) 0;
    line-height: 1.3;
  }

  .trust-item__description {
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-foreground);
    opacity: 0.75;
    margin: 0;
  }

  /* Side Image Layout */
  .manufacturing-trust__image {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    aspect-ratio: 1;
    background-color: #F5F5F5;
  }

  .manufacturing-trust__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .manufacturing-trust:hover .manufacturing-trust__img {
    transform: scale(1.05);
  }

  /* Desktop two-column layout */
  @media (min-width: 1024px) {
    .manufacturing-trust__container {
      grid-template-columns: 1fr 1fr;
    }

    .manufacturing-trust__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Tablet */
  @media (max-width: 1023px) and (min-width: 768px) {
    .manufacturing-trust {
      padding: var(--spacing-6) var(--spacing-3);
    }

    .manufacturing-trust__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-4);
    }

    .trust-item {
      padding: var(--spacing-4);
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .manufacturing-trust {
      padding: var(--spacing-6) var(--spacing-3);
    }

    .manufacturing-trust__container {
      gap: var(--spacing-6);
    }

    .manufacturing-trust__grid {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: var(--spacing-3);
    }

    .trust-item {
      padding: var(--spacing-3);
    }

    .trust-item__icon {
      width: 48px;
      height: 48px;
    }

    .trust-item__icon img {
      width: 32px;
      height: 32px;
    }

    .trust-item__title {
      font-size: 1rem;
    }

    .manufacturing-trust__title {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .manufacturing-trust__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2);
    }

    .trust-item {
      padding: var(--spacing-3);
    }
  }
</style>

{% schema %}
{
  "name": "Manufacturing & Trust",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Quality & Manufacturing Excellence"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section description",
      "default": "DRS Health is committed to the highest standards of pharmaceutical excellence and safety"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show side image",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Manufacturing facility image",
      "info": "Recommended: 500x500px square image"
    }
  ],
  "blocks": [
    {
      "type": "certification",
      "name": "Certification",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Certification icon",
          "info": "Recommended: 56x56px, transparent background"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Certification name",
          "default": "WHO-GMP Certified"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Meets international standards for pharmaceutical manufacturing quality and safety"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Manufacturing & Trust",
      "blocks": [
        {
          "type": "certification",
          "settings": {
            "title": "WHO-GMP Certified",
            "description": "Meets global pharmaceutical manufacturing standards"
          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "ISO 22000:2018",
            "description": "Food safety management system certified"
          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "FSSAI Licensed",
            "description": "Complies with Indian food safety regulations"
          }
        },
        {
          "type": "certification",
          "settings": {
            "title": "ISO 9001:2015",
            "description": "Quality management system certified"
          }
        }
      ]
    }
  ]
}
{% endschema %}
